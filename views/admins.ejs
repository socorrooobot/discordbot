<div class="row">
    <div class="col-12 text-center mb-5">
        <h1 class="display-4 fw-bold text-white"><i class="bi bi-shield-lock me-2 text-danger"></i> Alta Cúpula</h1>
        <p class="lead text-muted">Administradores com acesso total ao núcleo da Diva.</p>
    </div>
</div>

<div class="card mb-5 border-0 shadow-lg bg-dark text-white">
    <div class="card-header bg-transparent border-secondary py-3">
        <h5 class="mb-0"><i class="bi bi-person-plus-fill me-2 text-danger"></i> Nomear Novo Admin</h5>
    </div>
    <div class="card-body p-4">
        <form method="POST" action="/admins/add">
            <div class="row g-3">
                <div class="col-md-8">
                    <label class="form-label text-muted small fw-bold">Discord User ID</label>
                    <input type="text" name="userId" placeholder="Ex: 123456789012345678" class="form-control bg-black border-secondary text-white" required>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-danger w-100 fw-bold">Conceder Acesso</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row g-4">
    <% admins.forEach(admin => { %>
    <div class="col-md-4">
        <div class="card border-0 shadow-lg bg-dark text-white text-center h-100">
            <div class="card-body p-4">
                <div class="position-relative d-inline-block mb-3">
                    <img src="<%= admin.avatar %>" class="rounded-circle border border-3 border-danger shadow" width="80">
                    <span class="position-absolute bottom-0 end-0 badge rounded-pill bg-danger border border-2 border-dark">
                        <i class="bi bi-shield-check"></i>
                    </span>
                </div>
                <h5 class="fw-bold mb-1"><%= admin.username %></h5>
                <p class="text-muted small mb-3"><%= admin.id %></p>
                <hr class="border-secondary opacity-25">
                <form method="POST" action="/admins/remove">
                    <input type="hidden" name="userId" value="<%= admin.id %>">
                    <button type="submit" class="btn btn-outline-danger btn-sm px-4">Revogar Acesso</button>
                </form>
            </div>
        </div>
    </div>
    <% }); %>
</div>
