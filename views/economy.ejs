<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Economia - Miku Diva Bot</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('layout', { user, activePage: 'economy' }) %>

    <div class="container-fluid py-4">
        <h1 class="mb-4">ðŸ’° Gerenciar Economia</h1>

        <div class="card mb-4">
            <div class="card-body">
                <h5>Multiplicador Global: <%= multiplier %>x</h5>
                <form method="POST" action="/economy/multiplier" class="d-flex gap-2 align-items-end">
                    <div>
                        <label class="form-label">Novo Multiplicador</label>
                        <input type="number" name="multiplier" step="0.1" value="<%= multiplier %>" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Atualizar</button>
                </form>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th>UsuÃ¡rio</th>
                        <th>Saldo</th>
                        <th>Ãšltimo Daily</th>
                        <th>AÃ§Ãµes</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                    <tr>
                        <td>
                            <img src="<%= user.avatar %>" width="32" class="rounded-circle me-2">
                            <%= user.username %>
                        </td>
                        <td>ðŸ’µ <%= user.balance %> Akita Neru</td>
                        <td><%= user.lastDaily ? new Date(user.lastDaily).toLocaleString('pt-BR') : 'Nunca' %></td>
                        <td>
                            <form method="POST" action="/economy/add" class="d-inline">
                                <input type="hidden" name="userId" value="<%= user.id %>">
                                <input type="number" name="amount" placeholder="Valor" style="width: 100px" required>
                                <button type="submit" class="btn btn-sm btn-success">Adicionar</button>
                            </form>
                            <form method="POST" action="/economy/remove" class="d-inline ms-2">
                                <input type="hidden" name="userId" value="<%= user.id %>">
                                <input type="number" name="amount" placeholder="Valor" style="width: 100px" required>
                                <button type="submit" class="btn btn-sm btn-danger">Remover</button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>