<div class="row">
    <div class="col-12 text-center mb-5">
        <h1 class="display-4 fw-bold text-white"><i class="bi bi-piggy-bank me-2 text-primary"></i> Gerenciar Economia</h1>
        <p class="lead text-muted">Controle o fluxo de Akita Neru em todos os servidores.</p>
    </div>
</div>

<div class="card mb-5 border-0 shadow-lg bg-dark text-white">
    <div class="card-header bg-transparent border-secondary py-3">
        <h5 class="mb-0"><i class="bi bi-gear-fill me-2 text-primary"></i> Configura√ß√µes Globais</h5>
    </div>
    <div class="card-body p-4">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h6 class="text-uppercase text-muted fw-bold mb-1">Multiplicador Atual</h6>
                <h2 class="display-5 fw-bold text-info"><%= multiplier %>x</h2>
            </div>
            <div class="col-md-6">
                <form method="POST" action="/economy/multiplier">
                    <label class="form-label text-muted small fw-bold">Novo Multiplicador de Ganhos</label>
                    <div class="input-group">
                        <input type="number" name="multiplier" step="0.1" value="<%= multiplier %>" class="form-control bg-black border-secondary text-white" required>
                        <button type="submit" class="btn btn-primary px-4">Atualizar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="card border-0 shadow-lg bg-dark text-white">
    <div class="card-header bg-transparent border-secondary py-3">
        <h5 class="mb-0"><i class="bi bi-table me-2 text-primary"></i> Usu√°rios e Saldos</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-dark table-hover mb-0 align-middle">
                <thead class="bg-black">
                    <tr>
                        <th class="ps-4 py-3">Usu√°rio</th>
                        <th class="py-3">Saldo Atual</th>
                        <th class="py-3">√öltimo Daily</th>
                        <th class="py-3 pe-4 text-center">A√ß√µes de Admin</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(userItem => { %>
                    <tr>
                        <td class="ps-4">
                            <div class="d-flex align-items-center">
                                <img src="<%= userItem.avatar %>" width="40" class="rounded-circle me-3 border border-secondary">
                                <div>
                                    <div class="fw-bold"><%= userItem.username %></div>
                                    <small class="text-muted"><%= userItem.id %></small>
                                </div>
                            </div>
                        </td>
                        <td>
                            <span class="badge bg-success-subtle text-success border border-success px-3 py-2">
                                üíµ <%= userItem.balance.toLocaleString() %> Neru
                            </span>
                        </td>
                        <td class="text-muted">
                            <%= userItem.lastDaily ? new Date(userItem.lastDaily).toLocaleString('pt-BR') : 'Nunca' %>
                        </td>
                        <td class="pe-4 text-center">
                            <div class="d-flex justify-content-center gap-2">
                                <form method="POST" action="/economy/add" class="d-flex gap-1">
                                    <input type="hidden" name="userId" value="<%= userItem.id %>">
                                    <input type="number" name="amount" placeholder="Valor" class="form-control form-control-sm bg-black border-secondary text-white text-center" style="width: 80px" required>
                                    <button type="submit" class="btn btn-sm btn-success">Add</button>
                                </form>
                                <form method="POST" action="/economy/remove" class="d-flex gap-1">
                                    <input type="hidden" name="userId" value="<%= userItem.id %>">
                                    <input type="number" name="amount" placeholder="Valor" class="form-control form-control-sm bg-black border-secondary text-white text-center" style="width: 80px" required>
                                    <button type="submit" class="btn btn-sm btn-danger">Rem</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>
