<div class="row">
    <div class="col-12 text-center mb-5">
        <h1 class="display-4 fw-bold text-white"><i class="bi bi-cpu me-2 text-info"></i> Instâncias Ativas</h1>
        <p class="lead text-muted">Servidores que hospedam a consciência da Miku Diva.</p>
    </div>
</div>

<div class="row g-4">
    <% servers.forEach(server => { %>
    <div class="col-md-6">
        <div class="card border-0 shadow-lg bg-dark text-white h-100">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-4">
                    <% if (server.icon) { %>
                    <img src="<%= server.icon %>" class="rounded-3 shadow me-3" width="70" height="70">
                    <% } else { %>
                    <div class="bg-black rounded-3 me-3 d-flex align-items-center justify-content-center border border-secondary" style="width: 70px; height: 70px;">
                        <i class="bi bi-discord text-primary fs-2"></i>
                    </div>
                    <% } %>
                    <div>
                        <h4 class="mb-1 fw-bold text-white"><%= server.name %></h4>
                        <span class="badge bg-black border border-secondary text-muted small"><%= server.id %></span>
                    </div>
                </div>
                
                <div class="row g-2 mb-4">
                    <div class="col-4">
                        <div class="p-3 bg-black rounded-3 text-center border border-secondary h-100">
                            <div class="text-primary fs-4 fw-bold"><%= server.members %></div>
                            <small class="text-muted text-uppercase fw-bold" style="font-size: 0.65rem">Membros</small>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="p-3 bg-black rounded-3 text-center border border-secondary h-100">
                            <div class="text-success fs-4 fw-bold"><%= server.channels %></div>
                            <small class="text-muted text-uppercase fw-bold" style="font-size: 0.65rem">Canais</small>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="p-3 bg-black rounded-3 text-center border border-secondary h-100">
                            <div class="text-info fs-4 fw-bold"><%= server.roles %></div>
                            <small class="text-muted text-uppercase fw-bold" style="font-size: 0.65rem">Cargos</small>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <div class="text-muted small">
                        <i class="bi bi-person-badge-fill me-1"></i> Dono: <span class="text-light fw-bold"><%= server.owner %></span>
                    </div>
                    <a href="https://discord.com/channels/<%= server.id %>" target="_blank" class="btn btn-sm btn-outline-primary px-3">Abrir no Discord</a>
                </div>
            </div>
        </div>
    </div>
    <% }); %>
</div>
